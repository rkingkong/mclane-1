<odoo>
  <data>

    <template id="frontend_layout" inherit_id="portal.frontend_layout">
      <xpath expr="//div[@class='navbar-header']//button" position="before">
        <button type="button" class="navbar-toggle" data-target=".navbar-top-collapse" id="customnav">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </xpath>

      <xpath expr="//ul[@id='top_menu']//li" position="inside">
        <li class="closecustomnav"><a id="closecustomnav"><i class="fa fa-times"/></a></li>
      </xpath>
    </template>

  </data>
</odoo>
